{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}